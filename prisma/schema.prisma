generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Earning {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  amount     Float
  createdAt  String
  lead       String
  modelId    String @db.ObjectId
  percentage String
  status     String
  total      String
  workerId   String @db.ObjectId
}

model Model {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  age         String
  country     String
  date        String
  description String
  drive       String
  email       String
  image       String
  name        String   @unique
  password    String
  telegram    String
  workers     String[]
  earnings    String[]
}

model Worker {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  earnings String[]
  modelId  String
  name     String
  profit   String
  active   Boolean
}

model Lead {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  img       String
  modelId   String[]
  workerId  String   
  notes     Json 
  active    Boolean    
  seen      Boolean
  description String
}

model Todo {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  description   String
  workerId      String[]
  createdAt     String
  deadline      String
  type          String
  label         String
}