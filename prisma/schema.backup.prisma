generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Earning {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  amount     Float
  createdAt  String
  lead       String
  modelId    String   @db.ObjectId
  percentage String
  status     String
  total      String
  workerId   String   @db.ObjectId
  model      Model    @relation(fields: [modelId], references: [id]) 
}

model Model {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  age         String
  country     String
  date        String
  description String
  drive       String
  earnings    Earning[]  
  email       String
  image       String
  name        String     @unique
  password    String
  telegram    String
  workers     Worker[]   
}

model Worker {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  earnings String[]
  modelId  String   @db.ObjectId
  name     String
  profit   String
  model    Model    @relation(fields: [modelId], references: [id]) 
}
